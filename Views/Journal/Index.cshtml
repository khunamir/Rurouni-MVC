@model IEnumerable<Rurouni_v2.Models.JournalModel>
@{
    ViewData["Title"] = "Workout Journal";
}

<div class="container p-3">
    <h1 class="my-4">Workout Journal</h1>

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Journal" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create new Category
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]">Date</a>
                    </th>
                    <th>
                        Description
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Date.ToString("dddd, dd MMMM yyyy")</td>
                        <td width="35%">@obj.Description</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Journal" asp-route-Id="@obj.id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Journal" asp-route-Id="@obj.id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Type exists.</p>
    }
</div>

